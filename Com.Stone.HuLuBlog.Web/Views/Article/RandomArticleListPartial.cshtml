@model List<Com.Stone.HuLuBlog.Web.Models.ArticleVM>

@if (Model.Count > 0)
{
    <div class="blog-module shadow">
        <div class="blog-module-title">随便看看</div>
        <ul class="fa-ul blog-module-ul">
            @foreach (var article in Model)
            {
                <li><i class="fa-li fa fa-hand-o-right"></i><a href="@Url.Action("ArticleDetail","Article",new { articleID = article.ID })">@article.ArticleTitle</a></li>
            }
        </ul>
    </div>
}


