@section css{
    <link href="@Url.Content("~/Content/article.css")" rel="stylesheet" />
}
@section scripts{
    <script src="@Url.Content("~/Scripts/article.js")"></script>
}
@{
    ViewBag.Title = "HuLuBlog -- 文章专栏";
    Layout = "~/Views/Shared/NavLayOut.cshtml";
}




<div class="blog-container">
    @Html.MvcSiteMap().SiteMapPath("HuLuBlogSiteMap")
    <div class="blog-main">
        <div class="blog-main-left">

            @{ Html.RenderAction("ArticleListPartial", "Article");}
        </div>
        <div class="blog-main-right">
            <div class="blog-search">
                <div class="layui-form-item">
                    <div class="search-keywords  shadow">
                        <input class="keywords layui-input" type="text" name="keywords" placeholder="输入关键词搜索" autocomplete="off">
                    </div>
                    <div class="search-submit  shadow">
                        <a class="search-btn" data-request-url="@Url.Action("ArticleListPartial","Article")"><i class="fa fa-search"></i></a>
                    </div>
                </div>
            </div>

            @{ Html.RenderAction("TagListPartial", "Tag");}

            @{ Html.RenderAction("HotArticleListPartial", "Article");}

            @{ Html.RenderAction("ArticleRecommendPartial", "Article");}

            @{ Html.RenderAction("RandomArticleListPartial", "Article");}

            <!--右边悬浮 平板或手机设备显示-->
            <div class="category-toggle"><i class="fa fa-chevron-left"></i></div>
        </div>
        <div class="clear"></div>
    </div>
</div>



